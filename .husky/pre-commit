#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and formatting before commit
echo "🔍 Running pre-commit checks..."

# Check TypeScript
echo "📝 Type checking..."
yarn type-check

# Run ESLint
echo "🔧 Linting..."
yarn lint:fix

# Format code with Prettier
echo "✨ Formatting code..."
yarn format

# Run tests
echo "🧪 Running tests..."
yarn test run

echo "✅ Pre-commit checks passed!"
